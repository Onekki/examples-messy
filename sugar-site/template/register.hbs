  function login()
  {
    if ( !$( "#email" ).val() || !$( "#password" ).val() )
    {
      return;
    }
    $.ajax( {
      type: "POST",
      url: "/auth/login",
      dataType: "json",
      data: {
        email: $( "#email" ).val(),
        password: $( "#password" ).val()
      },
      success: function ( data )
      {
        window.location.assign( '/' )
